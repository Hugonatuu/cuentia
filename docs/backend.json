
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information stored in Firestore.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "displayName": {
          "type": "string"
        },
        "photoURL": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the user account was created."
        },
        "stripeRole": {
          "type": "string",
          "description": "The user's subscription role from Stripe.",
          "enum": ["artist", "magic", "special", "king"]
        },
        "monthlyCreditCount": {
            "type": "number",
            "description": "The number of credits used in the current billing cycle."
        },
        "payAsYouGoCredits": {
            "type": "number",
            "description": "The number of non-expiring credits purchased by the user."
        },
        "current_period_start": {
          "type": "string",
          "format": "date-time",
          "description": "The start date of the current billing cycle from Stripe."
        },
        "subscriptionId": {
          "type": "string",
          "description": "The ID of the user's active Stripe subscription."
        }
      },
      "required": ["email", "createdAt"]
    },
    "Story": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Story",
      "type": "object",
      "description": "Represents a story created by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the story."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Story)"
        },
        "title": {
          "type": "string",
          "description": "Title of the story."
        },
        "learningObjective": {
          "type": "string",
          "description": "The learning objective of the story."
        },
        "readerAge": {
          "type": "number",
          "description": "Target age of the reader."
        },
        "characterIds": {
          "type": "array",
          "description": "References to Characters. (Relationship: Story N:N Character)",
          "items": {
            "type": "string"
          }
        },
        "prompt": {
          "type": "string",
          "description": "Prompt used to generate the story."
        },
        "readerName": {
          "type": "string",
          "description": "Name of the reader (optional)."
        },
        "initialPhrase": {
          "type": "string",
          "description": "Initial phrase of the story (optional)."
        },
        "finalPhrase": {
          "type": "string",
          "description": "Final phrase of the story (optional)."
        }
      },
      "required": [
        "id",
        "userId",
        "title",
        "learningObjective",
        "readerAge",
        "prompt"
      ]
    },
    "Character": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Character",
      "type": "object",
      "description": "Represents a character in a story.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the character."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL of the character's avatar image.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "species": {
          "type": "object",
          "description": "The species of the character in multiple languages.",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "gender": {
          "type": "object",
          "description": "The gender of the character in multiple languages.",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "age": {
          "type": "number",
          "description": "The age of the character."
        }
      },
      "required": [
        "name",
        "avatarUrl",
        "createdAt",
        "species",
        "gender",
        "age"
      ]
    },
    "SubscriptionPlan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SubscriptionPlan",
      "type": "object",
      "description": "Represents a subscription plan available for purchase.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the subscription."
        },
        "name": {
          "type": "string",
          "description": "Name of the subscription plan (e.g., Artista, Magico)."
        },
        "credits": {
          "type": "number",
          "description": "Number of credits included in the subscription plan."
        },
        "price": {
          "type": "number",
          "description": "Price of the subscription plan."
        },
        "stripePriceId": {
            "type": "string",
            "description": "The ID of the price in Stripe."
        }
      },
      "required": [
        "id",
        "name",
        "credits",
        "price",
        "stripePriceId"
      ]
    },
    "StripeSubscription": {
        "title": "Stripe Subscription",
        "description": "Represents a user's subscription data from Stripe.",
        "type": "object",
        "properties": {
            "status": {
                "type": "string",
                "description": "The status of the subscription (e.g., 'active', 'trialing', 'past_due')."
            },
            "price": {
                "type": "object",
                "properties": {
                    "metadata": {
                        "type": "object",
                        "properties": {
                            "firebaseRole": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "PredefinedCharacter": {
      "title": "Predefined Character",
      "description": "A character provided by the application for users to include in stories.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the character."
        },
        "description": {
          "type": "object",
          "description": "A brief description of the character's personality and role in multiple languages.",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "visual_description": {
          "type": "object",
          "description": "A brief description of the character's visual appearance for this story, in multiple languages.",
           "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL for the character's image."
        },
        "species": {
          "type": "object",
          "description": "The species of the character in multiple languages.",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "gender": {
          "type": "object",
          "description": "The gender of the character in multiple languages.",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" },
            "it": { "type": "string" },
            "fr": { "type": "string" },
            "de": { "type": "string" },
            "pt": { "type": "string" }
          }
        },
        "age": {
          "type": "string",
          "description": "The age of the character."
        },
        "imageHint": {
          "type": "string",
          "description": "AI hint for the image."
        }
      },
      "required": ["name", "description", "imageUrl", "species", "gender", "age"]
    },
    "CommunityStory": {
      "title": "Community Story",
      "description": "A story shared by the community.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the story."
        },
        "coverImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL for the story's cover image."
        },
        "pdfUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL for the story's PDF file."
        },
        "language": {
            "type": "string",
            "description": "The language of the story.",
            "enum": ["es", "en", "fr", "it", "de", "pt"]
        }
      },
      "required": ["title", "coverImageUrl", "pdfUrl", "language"]
    },
    "StripePayment": {
      "title": "Stripe Payment",
      "description": "Represents a payment event from Stripe.",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "description": "The status of the payment (e.g., 'succeeded')."
        }
      }
    },
    "AppliedPayment": {
      "title": "Applied Payment Receipt",
      "description": "A receipt to mark a payment as having been processed to prevent duplicates.",
      "type": "object",
      "properties": {
        "appliedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the payment was processed."
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/customers/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores all customer-specific data, including profile, billing, and user-generated content.",
           "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user, matching the Firebase Auth UID."
            }
          ],
          "subcollections": [
            {
              "path": "checkout_sessions/{sessionId}",
              "definition": {
                "entityName": "CheckoutSession",
                "schema": {
                  "type": "object",
                  "properties": {}
                },
                "description": "Manages Stripe checkout sessions for a user."
              }
            },
            {
              "path": "subscriptions/{subscriptionId}",
              "definition": {
                "entityName": "StripeSubscription",
                "schema": {
                  "$ref": "#/entities/StripeSubscription"
                },
                "description": "Stores user subscription data from Stripe."
              }
            },
             {
              "path": "payments/{paymentId}",
              "definition": {
                "entityName": "StripePayment",
                "schema": { "$ref": "#/entities/StripePayment" },
                "description": "Stores payment events from Stripe for one-time purchases."
              }
            },
            {
              "path": "payments_applied/{paymentId}",
              "definition": {
                "entityName": "AppliedPayment",
                "schema": { "$ref": "#/entities/AppliedPayment" },
                "description": "Stores receipts for payments that have been processed to grant credits."
              }
            },
            {
              "path": "stories/{storyId}",
              "definition": {
                "entityName": "Story",
                "schema": {
                  "$ref": "#/entities/Story"
                },
                "description": "Stores stories created by the user.",
                "params": [
                  {
                    "name": "storyId",
                    "description": "The unique identifier of the story."
                  }
                ]
              }
            },
             {
              "path": "characters/{characterId}",
              "definition": {
                "entityName": "Character",
                "schema": {
                  "$ref": "#/entities/Character"
                },
                "description": "Stores characters created by the user.",
                "params": [
                  {
                    "name": "characterId",
                    "description": "The unique identifier of the character."
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "path": "/subscriptionPlans/{planId}",
        "definition": {
          "entityName": "SubscriptionPlan",
          "schema": {
            "$ref": "#/entities/SubscriptionPlan"
          },
          "description": "Stores subscription plans. Not user-specific, so stored at the root level.",
          "params": [
            {
              "name": "subscriptionId",
              "description": "The unique identifier of the subscription plan."
            }
          ]
        }
      },
      {
        "path": "/predefinedCharacters/{characterId}",
        "definition": {
          "entityName": "PredefinedCharacter",
          "schema": {
            "$ref": "#/entities/PredefinedCharacter"
          },
          "description": "Stores predefined characters available to all users.",
           "params": [
            {
              "name": "characterId",
              "description": "The unique identifier of the predefined character."
            }
          ]
        }
      },
      {
        "path": "/communityStories/{storyId}",
        "definition": {
          "entityName": "CommunityStory",
          "schema": {
            "$ref": "#/entities/CommunityStory"
          },
          "description": "Stores stories shared with the community.",
          "params": [
            {
              "name": "storyId",
              "description": "The unique identifier of the community story."
            }
          ]
        }
      }
    ]
  }
}
